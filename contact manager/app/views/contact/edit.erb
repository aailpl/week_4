<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center"><h1>Edit Contact</h1></div>	
	</div>
	<div class="row">
		<div class="col-xs-2"><h1></h1></div>
		<div class="col-xs-8">
			<form action="/<%= @contact.id %>/update" method="post" class="form-inline">
				<div class="form-group input-inline">
					<div class="input-group">
					  <span class="input-group-addon" id="basic-addon1"><%= @edit_mode.capitalize %></span>
					  <input type="text" name=<%= @edit_mode.downcase %> class="form-control" aria-describedby="basic-addon1">
					</div>
				</div>				
				<button type="submit" class="btn btn-default">Save</button>
			</form>
		</div>
		<div class="col-xs-2"></div>		
	</div>
</div>